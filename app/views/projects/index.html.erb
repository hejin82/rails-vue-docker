<p id="notice"><%= notice %></p>

<main data-controller="projects">

  <%= form_with url: projects_path(page: 1), method: :get do |form| %>

    <div class="container">
      <div class="row">
        <div class="col-6">
          <div class="list-group">
            <button type="button" class="list-group-item list-group-item-action list-group-item-primary" data-action="click->projects#typeclickhandle">
              <input class="form-check-input me-1" type="checkbox" name="status" value="1" aria-label="...">
              The current button
            </button>
            <button type="button" class="list-group-item list-group-item-action" data-action="click->projects#typeclickhandle">
              <input class="form-check-input me-1" type="checkbox" name="status" value="1" aria-label="...">The current button
            </button>
          </div>
        </div>
      </div>
    </div>
    <div class="container">
      <div class="row">
        <div class="col">
          <div class="card">
            <div class="card-header">
              <ul class="nav nav-tabs card-header-tabs" id="myTab" role="tablist">
                <li class="nav-item" role="presentation" data-action="click->projects#itemClick">
                  <button class="nav-link active" id="home-tab" data-bs-toggle="tab" data-bs-target="#home" type="button" role="tab" aria-controls="home" aria-selected="true">Home</button>
                </li>
                <li class="nav-item" role="presentation">
                  <button class="nav-link" id="profile-tab" data-bs-toggle="tab" data-bs-target="#profile" type="button" role="tab" aria-controls="profile" aria-selected="false">Profile</button>
                </li>
              </ul>
            </div>
            <div class="card-body">
              <div class="tab-content" id="myTabContent">
                <div class="tab-pane fade show active" id="home">
                  <div class="row">
                    <div class="col-auto">
                      <div class="row">
                        <div class="col-auto">
                          <select name="queryType1" class="form-select" aria-label="Default select example">
                            <option value="0" <%= "selected" if params[:queryType1] == "0" %>>検索対象を選択してください。</option>
                            <option value="1" <%= "selected" if params[:queryType1] == "1" %>>One</option>
                            <option value="2" <%= "selected" if params[:queryType1] == "2" %>>Two</option>
                            <option value="3" <%= "selected" if params[:queryType1] == "3" %>>Three</option>
                          </select>
                        </div>
                        <div class="col-auto">
                          <input class="form-control is-invalid"
                                 name="queryText1"
                                 type="text"
                                 placeholder="Default input"
                                 value="<%= params[:queryText1] %>">
                        </div>
                      </div>
                      <div class="row mt-1">
                        <div class="col-auto">
                          <select class="form-select" aria-label="Default select example">
                            <option selected>検索対象を選択してください。</option>
                            <option value="1">One</option>
                            <option value="2">Two</option>
                            <option value="3">Three</option>
                          </select>
                        </div>
                        <div class="col-auto">
                          <input class="form-control has-validation is-invalid" type="text" placeholder="Default input" aria-label="default input example">
                          <span class="text-danger">error message</span>
                        </div>
                      </div>
                      <div class="row mt-1">
                        <div class="col-auto">
                          <select class="form-select" aria-label="Default select example">
                            <option selected>検索対象を選択してください。</option>
                            <option value="1">One</option>
                            <option value="2">Two</option>
                            <option value="3">Three</option>
                          </select>
                        </div>
                        <div class="col-auto">
                          <input class="form-control" type="text" placeholder="Default input" aria-label="default input example">
                        </div>
                      </div>
                      <div class="row mt-1 ps-2">
                        <div class="col-auto">
                          <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio1" value="option1">
                            <label class="form-check-label" for="inlineRadio1">全て該当する</label>
                          </div>
                          <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio2" value="option2">
                            <label class="form-check-label" for="inlineRadio2">いずれかに該当する</label>
                          </div>
                        </div>
                      </div>
                    </div>
                    <div class="col-auto">
                      <label>Choose a type:</label>
                      <select id="hideSelectedOptionMultiple" multiple class=" form-control has-validation is-invalid">
                        <optgroup label="全て">
                          <option value="value1">Value 1</option>
                          <option value="value2">Value 2</option>
                          <option value="value3">Value 3</option>
                        </optgroup>
                      </select>
                    </div>
                    <div class="col-auto">
                      <label>Choose a type:</label>
                      <select id="hideSelectedOptionMultiple2" multiple>
                        <optgroup label="全て">
                          <option value="value1">Value 1</option>
                          <option value="value2">Value 2</option>
                          <option value="value3">Value 3</option>
                        </optgroup>
                      </select>
                    </div>
                  </div>
                </div>
                <div class="tab-pane fade" id="profile">
                  profile
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <%= form.submit 'submit',data: { disable_with: 'Are you sure?' } %>
  <% end %>

  <form
    data-action="ajax:success->projects#result"
    data-action="ajax:error->projects#error"
    data-projects-target="form"
    data-remote="true"
    method="post"
    action=""
    >
    <input
      data-action="keyup->projects#search"
      data-target="projects.query"
      type="text"
      name="query"
      value="" />
  </form>

  <h1>Projects</h1>
  <div class="pagination">
    <div class="page_info">
      <%= page_entries_info @posts %>
    </div>
    <%= will_paginate @posts, :container => false %>
  </div>
  <div class="container" data-target="projects.display">
    <table class="table table-bordered">
      <thead>
      <tr class="bg-light">
        <th>Name</th>
        <th>Description</th>
        <th>Homepage</th>
        <th>Is public</th>
        <th>Start date</th>
        <th>End date</th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
      <% @projects.each do |project| %>
        <tr>
          <td><%= project.name %></td>
          <td><%= project.description %></td>
          <td><%= project.homepage %></td>
          <td><%= project.is_public %></td>
          <td><%= project.start_date %></td>
          <td><%= project.end_date %></td>
          <td><%= link_to 'Show', project %></td>
          <td><%= link_to 'Edit', edit_project_path(project) %></td>
          <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?', dialog: 'dialog' } %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</main>





